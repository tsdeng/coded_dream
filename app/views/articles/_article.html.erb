<h3><a href="www.sina.con.cn"><%= article.title %><span class="created_at"><%=article.created_at.localtime.strftime("%Y/%m/%d %X")%></span></a> </h3>
<div class="articleBody">
  <p class="articleContent">
    <%=article.content%>
  </p>
  <a href="#" class="toggleComments"><%=article.comments.length%> comments</a>
  |<a class="toggleCommentForm" href="#">addAComment</a>
  <div class="comments_list">
    <%=render :partial=>"/comments/comment",:collection=>article.comments%>
  </div>
  <%form_for(article.comments.build,:url=>{:controller=>"comments",:action=>"create"},:html=>{:class=>"ajax comment_form"}) do |f|%>

    <%=f.hidden_field :article_id%>
  <p>
      <label>Your Name:</label>
      <%=f.text_field :author_name%>
    </p>
    <p>
      <label>Title:</label>
      <%=f.text_field :title%>
    </p>
    <p>
      <label>Content:</label>
      <%=f.text_area :content%>
    </p>
    <%=f.submit :add_the_comment%>
  <%end%>



</div>